# ------------------------------------------------------------
# Hostinger/LiteSpeed .htaccess for yalokgar.com
# Эквивалент Netlify конфигурации из netlify.toml
# ------------------------------------------------------------

AddDefaultCharset utf-8
Options -Indexes
DirectoryIndex index.html

# 404 страница
ErrorDocument 404 /404.html

<IfModule mod_rewrite.c>
  RewriteEngine On

  # 1) Канонический домен: www -> apex
  RewriteCond %{HTTP_HOST} ^www\.yalokgar\.com$ [NC]
  RewriteRule ^ https://yalokgar.com%{REQUEST_URI} [R=301,L]

  # 2) Принудительный HTTPS (на любом хосте)
  RewriteCond %{HTTPS} !=on [OR]
  RewriteCond %{HTTP:X-Forwarded-Proto} !https
  RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

  # 3) Отдавать /favicon.ico из изображения в корне (status 200)
  RewriteRule ^favicon\.ico$ /photo_2025-05-15_16-53-42.jpg [L,NC]

  # 4) Помечаем статические файлы из каталога /assets для долгого кэша
  RewriteRule ^assets/ - [E=CACHE_STATIC:1]
</IfModule>

# Заголовки безопасности и кэширование
<IfModule mod_headers.c>
  # Глобальные security headers
  Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" env=HTTPS
  Header set X-Frame-Options "DENY"
  Header set X-Content-Type-Options "nosniff"
  Header set Referrer-Policy "strict-origin-when-cross-origin"
  Header set Permissions-Policy "geolocation=(), microphone=(), camera=()"
  Header set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdn.jsdelivr.net; img-src 'self' https: data:; font-src 'self' data: https:; connect-src 'self'; object-src 'none'; base-uri 'self'; frame-ancestors 'none'; upgrade-insecure-requests"

  # Кэширование (эквивалент правил из netlify.toml)
  # 4a) Долгий кэш для /assets/*
  Header set Cache-Control "public, max-age=31536000, immutable" env=CACHE_STATIC

  # 4b) Точечные правила
  <Files "styles.css">
    Header set Cache-Control "public, max-age=0, must-revalidate"
  </Files>

  <Files "script.js">
    Header set Cache-Control "public, max-age=0, must-revalidate"
  </Files>

  <Files "index.html">
    Header set Cache-Control "no-cache"
  </Files>

  <Files "404.html">
    Header set Cache-Control "no-cache"
  </Files>

  <Files "photo_2025-05-15_16-53-42.jpg">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </Files>

  <Files "favicon.ico">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </Files>
</IfModule>
